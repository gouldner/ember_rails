


<div class="container">


  <div class="row clearfix">
    <div class="col-md-offset-1 col-md-10 column">

      <div class="jumbotron">
        <h1>Starting a Proposal?</h1>
        <p>Let us guide you through the process.</p>
        <p>{{#link-to 'people' 0 class="btn btn-primary btn-lg ep-button"}}
          Create Proposal
        {{/link-to}}</p>
      </div>

    </div> <!-- column -->
  </div> <!-- row -->
  <p>



  <div class="row clearfix">
    <div class="col-md-offset-1 col-md-10 column">

          {{#if controller}}

            <table id="proposals" class="table table-bordered">
              <thead>
                  <tr>
                    <th></th>
                    <th {{action "sort" "title"}}>Title <span {{bind-attr class=":pull-right :glyphicon controller.sortImageClass"}}></span></th>
                    <th>Sponsor</th>
                    <th>Created</th>
                  </tr>
              </thead>
              <tbody>
                  {{#each controller}}
                    <tr>
                      <td>{{#link-to 'people' this.id class="btn btn-primary btn-xs ep-button"}}Open{{/link-to}}</td>
                      <td>{{title}}</td>
                      <td></td>
                      <td></td>
                    </tr>
                  {{else}}
                    <tr>
                      <td>You have not created an proposals with EasyProposal yet.</td>
                    </tr>
                  {{/each}}
               </tbody>
            </table>

          {{/if}}



    </div> <!-- column -->
  </div> <!-- row -->



</div> <!-- container -->
